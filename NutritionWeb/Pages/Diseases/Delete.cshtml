@page
@model NutritionWeb.Pages.Diseases.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4 roboto-font">Delete Disease</h1>
    <a asp-page="Index" class="btn btn-dark">View All Disease</a>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disease.DiseaseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disease.DiseaseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disease.Vitamin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disease.Vitamin.VitaminName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disease.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disease.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Disease.Id" />
        <input type="submit" value="Delete Disease Details" class="btn btn-danger" /> 
    </form>
</div>
