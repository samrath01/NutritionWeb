@page
@model NutritionWeb.Pages.Diseases.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-4 roboto-font">Edit Disease</h1>
    <a asp-page="Index" class="btn btn-dark">View All Disease</a>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Disease.Id" />
            <div class="form-group">
                <label asp-for="Disease.VitaminId" class="control-label"></label>
                <select asp-for="Disease.VitaminId" class="form-control" asp-items="ViewBag.VitaminId"></select>
                <span asp-validation-for="Disease.VitaminId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disease.DiseaseName" class="control-label"></label>
                <input asp-for="Disease.DiseaseName" class="form-control" />
                <span asp-validation-for="Disease.DiseaseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disease.Description" class="control-label"></label>
                <textarea asp-for="Disease.Description" class="form-control"></textarea>
                <span asp-validation-for="Disease.Description" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
