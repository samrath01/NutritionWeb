@page
@model NutritionWeb.Pages.Foods.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4 roboto-font">Delete Food</h1>
    <a asp-page="Index" class="btn btn-dark">View All Food</a>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.FoodName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.Vitamin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Vitamin.VitaminName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Details)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Food.Id" />
        <input type="submit" value="Delete Food Details" class="btn btn-danger" />
    </form>
</div>
