@page
@model NutritionWeb.Pages.Supplements.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
    <h1 class="display-4 roboto-font">New Supplement</h1>
    <a asp-page="Index" class="btn btn-dark">View All Supplement</a>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Supplement.VitaminId" class="control-label"></label>
                <select asp-for="Supplement.VitaminId" class="form-control" asp-items="ViewBag.VitaminId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Supplement.SupplementName" class="control-label"></label>
                <input asp-for="Supplement.SupplementName" class="form-control" />
                <span asp-validation-for="Supplement.SupplementName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplement.CompanyName" class="control-label"></label>
                <input asp-for="Supplement.CompanyName" class="form-control" />
                <span asp-validation-for="Supplement.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplement.Price" class="control-label"></label>
                <input asp-for="Supplement.Price" class="form-control" />
                <span asp-validation-for="Supplement.Price" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
