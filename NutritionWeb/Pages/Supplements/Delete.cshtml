@page
@model NutritionWeb.Pages.Supplements.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4 roboto-font">Delete Supplement</h1>
    <a asp-page="Index" class="btn btn-dark">View All Supplement</a>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplement.SupplementName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplement.SupplementName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplement.Vitamin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplement.Vitamin.VitaminName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplement.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplement.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplement.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplement.Price)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Supplement.Id" />
        <input type="submit" value="Delete Supplement Details" class="btn btn-danger" /> 
    </form>
</div>
